<% provide(:title, 'Sell Book') %>
<h1>Sell a Book</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@textbook) do |f| %>

			<%= f.label :title %>
			<%= f.text_field :title %>

			<%= f.label :author %>
			<%= f.text_field :author %>

			<%= f.label :course %>
			<%= f.text_field :course %>

			<%= f.label :isbn %>
			<%= f.text_field :isbn %>

			<%= f.label :version %>
			<%= f.text_field :version %>

			<%= f.label :price %>
			<%= f.text_field :price %>


			<%= f.submit "Sell Book", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>